<%- include('./header.ejs') %>

<section class="blog-detail mtb-40">
  <div class="container" style="margin-top: 8rem">
    <div class="row mt-5">
      <div class="col-md-8">
        <div class="blog-left">
          <h1><%= d.title %></h1>
          <div class="posted-on">
            <p>
              by <span><%= d.author_name %></span> on
              <span><%= d.createdAt.toLocaleDateString() %></span>
            </p>
          </div>
          <div class="detail-img">
            <img class="w-75" src="<%= d.image.url %>" alt="blog1" />
          </div>
          <div class="blog-desc">
            <p class="text-justify" style="font-size: 20px">
              <%= d.description %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="blog-right">
          <div class="right-widget recent-post">
            <h3>Recent Blogs</h3>

            <% r.forEach((recentitem)=>{ %>
            <div class="rb-box">
              <div class="rb-box-img">
                <a href="/blogdetail/<%= recentitem._id %>">
                  <img class="" src="<%= recentitem.image.url %>" alt="blog1" />
                </a>
              </div>
              <div class="rb-box-desc">
                <a href="/blogdetail/<%= recentitem._id %>">
                  <h4><%= recentitem.title %></h4>
                </a>
                <p><%= recentitem.createdAt.toLocaleDateString() %></p>
              </div>
            </div>
            <% }) %>
          </div>
          <div class="right-widget categories">
            <h3>Categories</h3>
            <div class="row gy-1">
              <% c.forEach((categoryitem)=>{ %>

              <div>
                <h5>
                  <a href="#" class="text-decoration-none">
                    <%= categoryitem.category %>
                  </a>
                </h5>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./footer.ejs') %>
