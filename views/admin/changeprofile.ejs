<%- include('../header.ejs') %>

<section class="dashboard-wrap mtb-40" style="margin-top: 5.6rem">
    <div class="container-fluid" style="width: 97%">
        <div class="body-content">
            <div class="row pt-5">
              <%- include('./sidebar.ejs') %>
                <div class="col-md-5">
                    <div class="dash-right">
                      <div class="dash-header">
                        <div class="dash-title">
                          <h1>Change profile</h1>
                        </div>

                   
                       
                      </div>
                      <form action="/updateprofile" method="post" enctype="multipart/form-data" >
                          <div class="mb-3">
                              <label for="">NAME</label>
                              <input type="text" class="form-control" name="name" value="<%= n %>">
                          </div>
                          <div class="mb-3">
                            <label for="">EMAIL</label>
                            <input type="text" class="form-control" name="email" value="<%= e %>">
                        </div>
                          <div class="md-3">
                            <label for="">Upload Image</label>
                            <input type="file" name="image" class="form-control ">
                            <img class="rounded-circle mt-3" style="width: 100px; height: 100px;" src="<%= i.url %>">
                          </div>
                          
                       
                          <button type="submit" class="btn btn-info mt-3">Update</button>
                      </form>
                    </div>
                  </div>
                </div>
            </div>
        </div>
      
        </div>
        </section>



<%- include('../footer.ejs') %>