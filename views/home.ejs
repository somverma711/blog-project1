<section class="featured-blog mtb-40">
  <div class="container">
    <div class="row">
      <% b.forEach((item)=>{ %>
      <div class="col-md-4">
        <div class="blog-box mt-4">
          <img
            class="w-100 rounded shadow-lg"
            src="<%= item.image.url %>"
            height="200px"
            alt="blog1"
          />
          <p style="text-transform: uppercase" class="mt-3">
            <%= item.author_name %>,
            <span><%= item.createdAt.toLocaleDateString() %></span>
          </p>
          <h3><%= item.title.slice(0,60) %></h3>
          <p>
            Produce on: <span><%= item.createdAt.toLocaleDateString() %></span>
          </p>
          <p style="font-size: 18px"><%= item.description.slice(0,100) %></p>
          <a href="/blogdetail/<%= item._id %>" class="btn btn-warning"
            >Read more...</a
          >
        </div>
      </div>
      <% }) %>
      <a href="/blog" class="btn btn-warning">More Blogs</a>
    </div>
  </div>
</section>

